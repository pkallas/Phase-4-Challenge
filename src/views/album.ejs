<%- include header.ejs %>

  <h1><%= album.title %></h1>
  <em>by <%= album.artist %></em>

  <div class="album-page-column-head">
    <h2 class="album-page-column-head-left">Reviews</h2>
    <button type="button" class="album-page-column-head-right">Add Review</button>
  </div>

  <div class="album-page-column">
    <% if (reviews) { %>
      <% reviews.forEach(function(review) { %>
        <div>
          <h5><a href="/albums/<%= review.album_id %>"><%= review.title %></a></h5>
          <span><%= review.date_written %></span>
          <span><%= review.description %></span>
          <span>by <a href="/users/<% review.user_id %>"><%= review.name %></a></span>
        </div>
      <% }) %>
    <% } %>
  </div>

<%- include footer.ejs %>
